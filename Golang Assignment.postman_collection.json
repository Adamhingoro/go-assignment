							"const response = pm.response.json();\r",
							"\r",
							"// Check if the response contains the 'token' property\r",
							"if (response && response.token) {\r",
							"    // Extract the token from the response\r",
							"    const token = response.token;\r",
							"\r",
							"    // Set the token as an environment variable (or global variable)\r",
							"    pm.environment.set(\"authToken\", token);\r",
							"\r",
							"    // Optional: Log the token to the Postman console for debugging\r",
							"    console.log(\"Bearer Token:\", token);\r",
							"} else {\r",
							"    // Handle the case where the token is not present in the response\r",
							"    console.error(\"Token not found in the response\");\r",
							"}"
